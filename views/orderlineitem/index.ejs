<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">
      <a href="orderlineitem/create" class="btn btn-primary new">
        Create a new orderlineitem
      </a>
      <h2>Recent orderlineitem entries</h2>
      <p>There are
        <%= orderlineitems.query.length %> orderlineitems.
          <br/>
      </p>
      <% for (var i = orderlineitems.query.length-1; i >= 0; i--) {   
        orderlineitem = orderlineitems.query[i];   %>
        <div class="panel panel-default">
          <div class="panel-heading"></div>
          <div class="text-muted pull-right"></div>
          <div class="panel-body">
            ID:
            <%=  orderlineitem._id %>
        <br> OrderID:
        <%=orderlineitem.orderID%>
        <br/> LineNumber:
        <%=orderlineitem.lineNumber%>
        <br/>productKey:
        <%=orderlineitem.productKey%>
                    <br/>
                    <br/>
                          <a href="/orderlineitem/delete/<%= orderlineitem._id  %>" class="btn btn-danger"> Delete </a>
                          <a href="/orderlineitem/details/<%= orderlineitem._id %>" class="btn btn-info"> Details </a>
                          <a href="/orderlineitem/edit/<%= orderlineitem._id %>" class="btn btn-warning"> Edit </a>
          </div>
        </div>
        <% } %>

    </div>
  </div>
</div>